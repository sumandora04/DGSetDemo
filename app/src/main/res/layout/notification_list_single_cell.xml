<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "wrap_content"
	android:layout_marginBottom = "2dp" >
	
	<TextView
		android:id = "@+id/notification_title_text_view"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "8dp"
		android:layout_marginEnd = "8dp"
		android:padding = "8dp"
		android:text = "Notification Title"
		android:textAlignment = "viewStart"
		android:textStyle = "bold"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toTopOf = "parent" />
	
	<TextView
		android:id = "@+id/notification_message_text_view"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:layout_marginBottom = "8dp"
		android:paddingStart = "8dp"
		android:paddingEnd = "8dp"
		android:paddingBottom = "8dp"
		android:text = "Some message here"
		app:layout_constraintBottom_toBottomOf = "parent"
		app:layout_constraintEnd_toEndOf = "@+id/notification_title_text_view"
		app:layout_constraintHorizontal_bias = "0.0"
		app:layout_constraintStart_toStartOf = "@+id/notification_title_text_view"
		app:layout_constraintTop_toBottomOf = "@+id/notification_title_text_view"
		app:layout_constraintVertical_bias = "0.361" />
	
	<ImageView
		android:id = "@+id/imageView2"
		android:layout_width = "20dp"
		android:layout_height = "20dp"
		android:layout_marginTop = "8dp"
		android:layout_marginEnd = "8dp"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintTop_toTopOf = "parent"
		app:srcCompat = "@android:drawable/ic_delete" />

	<View
		android:layout_width = "match_parent"
		android:layout_height = "1dp"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "8dp"
		android:layout_marginEnd = "8dp"
		android:layout_marginBottom = "8dp"
		android:background = "@android:color/darker_gray"
		app:layout_constraintBottom_toBottomOf = "parent"
		app:layout_constraintEnd_toEndOf = "@+id/notification_message_text_view"
		app:layout_constraintStart_toStartOf = "@+id/notification_message_text_view"
		app:layout_constraintTop_toBottomOf = "@+id/notification_message_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout >